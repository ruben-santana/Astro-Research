pro smiley 
  t = (dindgen(10000)/1000.)*(2*!pi)
  x = cos(t)
  y = sin(t)
  
  device, decomposed = 1
  plot, x, y


  t1 = (dindgen(1000)/1000.)*(!pi)
  x1 = cos(t1)/1.5
  y1 = -sin(t1)/1.5
  device, decomposed = 0
  loadct, 13  
  oplot, x1, y1, color = 180

  t2 = (dindgen(10000)/1000.)*(2*!pi)
  a = .1
  b = .25
  x2 = a*cos(t2) 
  y2 = b*sin(t2)
  oplot, x2, y2

end
